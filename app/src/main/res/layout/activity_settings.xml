<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="khalil.csc131attendance.SettingsActivity">

    <LinearLayout
        android:id="@+id/settings"
        android:background="@drawable/background_blurred"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="122dp"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal|center"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:text="Google Sheet URL:"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <AutoCompleteTextView
            android:id="@+id/url"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:background="@drawable/text_background"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="textUri"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="18sp" />

        <Button
            android:id="@+id/update_location"
            style="?android:textAppearanceSmall"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_sheet"
            style="?android:textAppearanceSmall"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/admin_mode"
            style="?android:textAppearanceSmall"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/password"
            style="?android:textAppearanceSmall"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/nav_check_in"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:background="@drawable/nav_bar_checkin"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/navigation"/>

    <Button
        android:id="@+id/nav_multiple"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:background="@drawable/nav_bar_multiple"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@id/navigation"/>

    <Button
        android:id="@+id/nav_settings"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/nav_bar_setting_select"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@id/navigation"/>
</RelativeLayout>
